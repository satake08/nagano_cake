<h1>商品一覧</h1>
<p>登録されてる商品一覧</p>

<p><%= link_to '新規登録', admin_items_new_path %></p>

<p><%= link_to '商品名', admin_items_show_path %></p>
     <%= link_to new_admin_item_path, class:'float-right' do %>
        <i class="fas fa-plus-circle fa-3x"></i>
      <% end %>
    </div>
  </div>
  <div class="row">

    <div class="col-md-8 offset-md-1 mt-3">
      <table class="table">
        <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <!--<th>ジャンル</th>-->
              <!--<th>ステータス</th>-->
            </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <!--id-->
                <%= item.id %>
              </td>

              <td>
                <!--name-->
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end
                %>
              </td>
              <td>
                <!--price-->
                <%= item.price %>
              </td>

              <!--<td>-->
                <!--genre-->
              <!--</td>-->

              <!--<td>-->
                <!--is_active-->
              <!--</td>-->
            </tr>
          <% end %>

        </tbody>
      </table>

    </div>
  </div>
      <%= paginate @items %>
</div>

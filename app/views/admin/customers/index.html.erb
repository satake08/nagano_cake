<h1>会員一覧</h1>

<p>登録されてる会員一覧</p>
<tr>
  <th>会員ID</th>
  <th>氏名</th>
  <th>メールアドレス</th>
  <th>ステータス</th>
</tr>
<% @customers.each do |customer| %>
<tr>
  <td>
    <!--会員ID-->
    <%= customer.id %>
  </td>
  <td>
<!--<p><= link_to '会員氏名', admin_customers_show_path %></p>-->
<%= link_to admin_customer_path(customer.id) do %>
  <%= "#{customer.last_name + customer.first_name}" %>
<% end %>
  </td>
  <td>
    <!--メールアドレス-->
    <%= customer.email %>
  </td>

  <td>
    <!--<p>会員ステータス</p>-->
    <% if customer.is_active == true %>
      <p>有効</p>
    <% else %>
      <p>退会</p>
    <% end %>
  </td>

</tr>
<% end %>